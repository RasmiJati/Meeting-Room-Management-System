@model Booking

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class=" border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Booking</h2>
            <hr />
        </div>


        <div class=" mb-3">
            <label asp-for="Room"></label>
            <input asp-for="Room" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="UserId"></label>
            <input asp-for="UserId" disabled class=" form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="Date"></label>
            <input asp-for="Date" disabled class=" form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="StartTime"></label>
            <input asp-for="StartTime" disabled class=" form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EndTime"></label>
            <input asp-for="EndTime" disabled class=" form-control" />
        </div>

        <div class=" mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class=" form-control" />
        </div>

        <button type="submit" class=" btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Booking" asp-action="Index" class=" btn btn-secondary" style="width: 150px">Back to List </a>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}