@model List<Booking>
@{
    ViewData["Title"] = "Index";
}

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">MeetingRoomManagementSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="User" asp-action="Index">User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Room" asp-action="Index">Room</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Booking" asp-action="Index">Book Meeting Room</a>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Setting</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#"></a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="User" asp-action="Logout">Log out</a>
                            </div>
                        </li>


                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>

    </header>


    <div class="container p-3">
        <div class=" row pt-4">
            <div class="col-6">
                <h2 class=" text-primary">Booking List</h2>
            </div>

            <div class=" col-6 text-end">
                <a asp-controller="Booking" asp-action="Create" class=" btn btn-primary"> <i class="bi bi-plus-circle"></i>Create New Booking</a>
            </div>

        </div>
        <br /> <br />

    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Room Name</th>
                <th>Room Capacity</th>
                <th>User</th>
                <th>Date</th>
                <th>Start At</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="25%">@(obj.Room != null ? obj.Room.Name : "N/A")</td>
                    <td width="25%">@(obj.Room != null ? obj.Room.Capacity : "N/A")</td>
                    <td width="25%">@(obj.UserId != 0 ? obj.UserId: "N/A")</td> 
                    <td width="15%">@obj.Date.ToShortDateString()</td>
                    <td width = "15%">@obj.StartTime.ToShortTimeString()</td> 
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Booking" asp-action="Edit" asp-route-id="@obj.Id"
                               class=" btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>

                            <a asp-controller="Booking" asp-action="Delete" asp-route-id="@obj.Id"
                               class=" btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> </a>
                            
                               <a asp-controller="Booking" asp-action="Index" asp-route-id="@obj.Id"
                               class=" btn btn-secondary mx-2"><i class="bi bi-list"></i></a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>


